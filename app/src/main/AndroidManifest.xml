<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.epicodus.supremeinvention">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.WelcomeActivity" />
        <activity android:name=".ui.MyPreferencesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.supremeinvention.ui.WelcomeActivity" />
        </activity>
        <activity android:name=".ui.MyFavoritesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.supremeinvention.ui.MyPreferencesActivity" />
        </activity>
        <activity android:name=".ui.SearchActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.supremeinvention.ui.WelcomeActivity" />
        </activity>
        <activity android:name=".ui.SearchResultsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.supremeinvention.ui.SearchActivity" />
        </activity>
        <activity android:name=".ui.PetProfileActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.supremeinvention.ui.SearchResultsActivity" />
        </activity>
        <activity android:name=".ui.CreateAccountActivity" />
        <activity android:name=".ui.SearchFiltersActivity"></activity>
    </application>

</manifest>