<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.epicodus.supremeinvention.ui.SearchActivity"
    android:background="@color/colorBackground">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/imageView4"
        android:src="@drawable/search1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Start A New Search"
        android:id="@+id/searchTitleTextView"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/zipCodeEditText"
        android:hint="Zip Code"
        android:textAlignment="center"
        android:inputType="number"
        android:layout_below="@+id/requiredTextView"
        android:layout_alignLeft="@+id/speciesEditText"
        android:layout_alignStart="@+id/speciesEditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/speciesEditText"
        android:hint="Species (Spinner)"
        android:textAlignment="center"
        android:inputType="number"
        android:layout_below="@+id/zipCodeEditText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/sizeEditText"
        android:hint="Size (Spinner)"
        android:textAlignment="center"
        android:inputType="number"
        android:enabled="true"
        android:layout_below="@+id/optionalTextView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Optional"
        android:id="@+id/optionalTextView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Required"
        android:id="@+id/requiredTextView"
        android:layout_below="@+id/searchTitleTextView"
        android:layout_alignLeft="@+id/optionalTextView"
        android:layout_alignStart="@+id/optionalTextView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/sexEditText"
        android:hint="Sex (Switch)"
        android:textAlignment="center"
        android:inputType="number"
        android:enabled="true"
        android:layout_below="@+id/sizeEditText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/breedEditText"
        android:hint="Breed (Spinner)"
        android:textAlignment="center"
        android:inputType="number"
        android:enabled="true"
        android:layout_below="@+id/sexEditText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/ageEditText"
        android:hint="Age (Spinner)"
        android:textAlignment="center"
        android:inputType="number"
        android:enabled="true"
        android:layout_below="@+id/breedEditText"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Search"
        android:id="@+id/searchButton"
        android:textStyle="bold"
        android:textSize="30dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorTextIcons"
        android:layout_below="@+id/ageEditText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
