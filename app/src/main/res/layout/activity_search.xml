<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.epicodus.supremeinvention.ui.SearchActivity"
    android:background="@color/colorBackground">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/imageView4"
        android:src="@drawable/search1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/zipCodeEditText"
        android:hint="Zip Code"
        android:textAlignment="center"
        android:inputType="number"
        android:backgroundTint="@color/colorPrimary"
        android:textSize="28sp"
        android:layout_below="@+id/whatAreaTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/speciesSpinner"
        android:textAlignment="center"
        android:spinnerMode="dialog"
        android:backgroundTint="@color/colorPrimaryDark"
        android:clickable="true"
        android:dropDownWidth="match_parent"
        android:contextClickable="false"
        android:layout_below="@+id/whatKindTextView"
        android:layout_marginTop="30dp"
        android:layout_alignLeft="@+id/zipCodeEditText"
        android:layout_alignStart="@+id/zipCodeEditText"
        android:layout_alignRight="@+id/zipCodeEditText"
        android:layout_alignEnd="@+id/zipCodeEditText" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next Step"
        android:id="@+id/nextStepButton"
        android:textStyle="bold"
        android:textSize="30dp"
        android:background="@drawable/round_button"
        android:textColor="@color/colorTextIcons"
        android:backgroundTint="@color/colorPrimary"
        android:layout_below="@+id/speciesSpinner"
        android:layout_alignLeft="@+id/whatKindTextView"
        android:layout_alignStart="@+id/whatKindTextView"
        android:layout_marginTop="57dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What area should we show you adoptable animals from?"
        android:id="@+id/whatAreaTextView"
        android:textAlignment="center"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What kind of animal are you looking for?"
        android:id="@+id/whatKindTextView"
        android:textAlignment="center"
        android:layout_below="@+id/zipCodeEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

</RelativeLayout>
