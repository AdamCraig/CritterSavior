<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.epicodus.supremeinvention.ui.SearchFiltersActivity"
    android:background="@color/colorBackground">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/pinImageView"
        android:src="@drawable/search1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/sizeSpinner"
        android:textAlignment="center"
        android:spinnerMode="dropdown"
        android:backgroundTint="@color/colorPrimaryDark"
        android:clickable="true"
        android:dropDownWidth="match_parent"
        android:contextClickable="false"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/addFiltersTextView" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Search"
        android:id="@+id/startSearchButton"
        android:textStyle="bold"
        android:textSize="30dp"
        android:background="@drawable/round_button"
        android:textColor="@color/colorTextIcons"
        android:backgroundTint="@color/colorAccent"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/ageSpinner"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add additional filters to your search below."
        android:id="@+id/addFiltersTextView"
        android:textAlignment="center"
        android:layout_below="@+id/pinImageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/breedSpinner"
        android:textAlignment="center"
        android:spinnerMode="dropdown"
        android:backgroundTint="@color/colorPrimaryDark"
        android:clickable="true"
        android:dropDownWidth="match_parent"
        android:contextClickable="false"
        android:layout_below="@+id/sizeSpinner"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/sexSpinner"
        android:textAlignment="center"
        android:spinnerMode="dropdown"
        android:backgroundTint="@color/colorPrimaryDark"
        android:clickable="true"
        android:dropDownWidth="match_parent"
        android:contextClickable="false"
        android:layout_below="@+id/breedSpinner"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/ageSpinner"
        android:textAlignment="center"
        android:spinnerMode="dropdown"
        android:backgroundTint="@color/colorPrimaryDark"
        android:clickable="true"
        android:dropDownWidth="match_parent"
        android:contextClickable="false"
        android:layout_below="@+id/sexSpinner"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
