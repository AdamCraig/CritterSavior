<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.epicodus.supremeinvention.ui.WelcomeActivity"
    android:clickable="true"
    android:background="@color/colorBackground">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/imageView2"
        android:src="@drawable/logo3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start A New Search"
        android:id="@+id/searchButton"
        android:textSize="24dp"
        android:background="@drawable/round_button"
        android:layout_above="@+id/favoritesButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/colorAccent2" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Favorites"
        android:id="@+id/favoritesButton"
        android:textSize="24dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/colorPrimaryLight"
        android:layout_above="@+id/preferencesButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Preferences"
        android:id="@+id/preferencesButton"
        android:textSize="24dp"
        android:background="@drawable/round_button"
        android:clickable="true"
        android:layout_marginBottom="29dp"
        android:allowUndo="false"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/colorTextIcons"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
